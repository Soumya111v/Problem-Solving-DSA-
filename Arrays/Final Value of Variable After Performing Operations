#include<bits/stdc++.h>
using namespace std;

int main()
{
   vector<string> operations = {"--X","X++","X++"};
   int x=0;
   for(int i=0;i<operations.size();i++){
   if(operations[i]=="--X"||operations[i]=="X--"){
    x-=1;  
    }
         else {
             x+=1;
         }
     } 
        cout<<x;
    
  return 0;
}
